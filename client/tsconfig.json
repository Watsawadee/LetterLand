{
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "customConditions": [
      "react-native"
    ],
    "strict": true,
    "types": [],
    "target": "esnext",
    "module": "node16",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "declaration.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "babel.config.js"
  ],
  "extends": "expo/tsconfig.base"
}